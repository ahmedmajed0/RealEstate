 @model TbTeam  
        
<!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>Add
                                    <small>Real estate Admin panel</small>
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">فريق العمل</li>
                                <li class="breadcrumb-item active">اضافة عضو</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->

            <!-- Container-fluid starts-->

            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>اضافة سكني</h5>
                            </div>
                            <div class="card-body">
                                <div class="row product-adding">
                                    <form asp-controller="Team" asp-action="Add" role="form" method="post" enctype="multipart/form-data" class="needs-validation add-product-form" novalidate="">
                                    <div style="margin-bottom:10px" class="col-xl-5">
                                        <div class="add-product">
                                            <div class="row">
                                                @if(Model == null) {
                                                <input asp-for="MemberId" value="0" type="hidden" />
                                                }
                                                else{
                                                    <input asp-for="MemberId" type="hidden" />
                                                }

                                                @if(Model == null || Model.MemberId == 0){
                                                <div class="col-12"><span class="text-danger">@ViewBag.ImageError</span></div>
                                                <div class="col-xl-6 xl-50 col-sm-5 col-4">
                                                    <img style="cursor: auto;" id="f-img" src="~/Admin/assets/images/pro3/1.jpg" width="400" alt="صورة" class="img-fluid blur-up lazyloaded">
                                                </div>
                                                <div class="col-xl-3 xl-50 col-sm-6 col-3">
                                                    <ul class="file-upload-product">
                                                        <li><div class="box-input-file"><input id="img1" name="Files" class="upload" type="file"><i  class="fa fa-plus"></i></div></li>
                                                    </ul>
                                                </div>
                                                }
                                                else{
                                                   <img style="cursor: auto;" id="f-img" src="@string.Format("/Uploads/{0}",Model.Image)" width="300" alt="صورة" class="img-fluid blur-up lazyloaded">
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-7">
                                        

                                                <div class="form-group mb-3 row">
                                                    <label for="validationCustomUsername" class="col-xl-3 col-sm-4 mb-0">الاسم  :</label>
                                                    <input asp-for="Name" class="form-control col-xl-8 col-sm-7"  id="validationCustomUsername" type="text" required="">
                                                    <div class="invalid-feedback offset-sm-4 offset-xl-3">من فضلك ادخل الاسم </div>
                                                    <div class="valid-feedback">Looks good!</div>
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>

                                                    <div class="form-group mb-3 row">
                                                        <label for="validationCustomUsername" class="col-xl-3 col-sm-4 mb-0">الحساب :</label>
                                                        <input asp-for="Email" class="form-control col-xl-8 col-sm-7" placeholder= " ex@gmail.com " id="validationCustomUsername" type="text" >
                                                        <div class="invalid-feedback offset-sm-4 offset-xl-3"></div>
                                                        <div class="valid-feedback">Looks good!</div>
                                                    </div>

                                                    <div class="form-group mb-3 row">
                                                        <label for="validationCustomUsername8" class="col-xl-3 col-sm-4 mb-0">رقم الجوال :</label>
                                                        <input asp-for="Phone" class="form-control col-xl-8 col-sm-7" placeholder= "ex. 055964" id="validationCustomUsername8" type="text" required="">
                                                        <div class="invalid-feedback offset-sm-4 offset-xl-3"> </div>
                                                        <div class="valid-feedback">Looks good!</div>
                                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                                    </div>
                                            </div>
                                            <div class="form">
                                            <div class="offset-xl-3 offset-sm-4">
                                                <button type="submit" class="btn btn-primary">اضافة</button>
                                                <a asp-controller="Team" asp-action="GetAll" class="btn btn-light">تجاهل</a>
                                            </div>
                                        
                                    </div>
                                </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/Admin/assets/js/touchspin/vendors.min.js"></script>
<script src="~/Admin/assets/js/touchspin/touchspin.js"></script>
<script src="~/Admin/assets/js/touchspin/input-groups.min.js"></script>

<!-- form validation js-->
<script src="assets/js/dashboard/form-validation-custom.js"></script>

    <script>
        $(document).ready(function () {

        document.getElementById("f-img").style.pointerEvents = "none";  

        $('#img1').on('change', function () {

            var file = document.getElementById("img1").files;
            if(file.length > 0) {
                var fileReader = new FileReader();
                fileReader.onload = function (event) {
                    document.getElementById("f-img").setAttribute("src", event.target.result)
                };

                fileReader.readAsDataURL(file[0]);
            }

        


            $(this).closest("div").css("background-color", "#FF8084");
            $(this).next("i").css("color", "#FFF");
        });

        $('#img2').on('change', function () {
            $(this).closest("div").css("background-color", "#FF8084", "color","white");
            $(this).next("i").css("color", "#FFF");
        });

        $('#img3').on('change', function () {
            $(this).closest("div").css("background-color", "#FF8084", "color","white");
            $(this).next("i").css("color", "#FFF");
        });

        $('#img4').on('change', function () {
            $(this).closest("div").css("background-color", "#FF8084", "color","white");
            $(this).next("i").css("color", "#FFF");
        });

        $('#img5').on('change', function () {
            $(this).closest("div").css("background-color", "#FF8084", "color","white");
            $(this).next("i").css("color", "#FFF");
        });


        });
    </script>
}